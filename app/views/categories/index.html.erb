<h1>Categorias</h1>

<table>
    <thead>
        <th>Nombre</th>
    </thead>

    <tbody>
        <% @categories.each do |cat| %>
            <tr>
                <td>
                    <%= cat.name %>
                </td>
                <td>
                    <%= link_to 'ver', category_path(cat.id)%>
                </td>
                <td>
                    <%= link_to 'Borrar', cat, method: 'delete', data: {confirm: 'seguro?'}%>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>